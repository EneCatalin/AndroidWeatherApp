<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/weather_Icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/weather_icon_cloudy_day" />

        <TextView
            android:id="@+id/Day_of_the_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/weather_Icon"
            android:text="Testing"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/main_weather_description_of_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Day_of_the_week"
            android:layout_toRightOf="@+id/weather_Icon"
            android:text="this"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/day_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/Day_of_the_week"
            android:text="31"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/weather_temp_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/day_temp"
            android:text="-"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/day_temp"
            android:text="14"
            android:textSize="46sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

